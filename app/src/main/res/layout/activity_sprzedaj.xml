<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SprzedajActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editNazwa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nazwa przedmiotu"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editCena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="cena przedmiotu"
            android:inputType="text" />

        <EditText
            android:id="@+id/editOpis"
            android:layout_width="match_parent"
            android:layout_height="362dp"
            android:ems="10"
            android:hint="opis przedmiotu"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonSprzedaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPRZEDAJ" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>